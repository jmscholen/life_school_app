  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          </button>
          <a class="navbar-brand" href="/">Sinatra HW 3</a>
        </div>
        <div class="collapse navbar-collapse">
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">

      <div class="starter-template">
        <h1>The Greatest Life Events and Schools Attended Website EVER!!!!</h1>

				<div class="row">
					<div class="col-md-6">
        
							<h2>Life Events</h2> 
              <button><a href="/events/new">Add Life Event</a></button>
								<ul class="list-group">
          
										<% @life_events.each do |event| %>
										<li class="list-group-item"><p class="text-left"><%= event.description %><button><a href="/events/<%= event.id %>/edit">Edit</a></button> <button><a href="/events/<%= event.id %>/delete">Delete</a></button></p></li>
										<% end %> 

								</ul>
					</div>
					<div class="col-md-6">
							<h2>Schools Attended</h2> <button><a href="/schools/new">Add School</a></button>
								<ul class="list-group">
									<% @schools.each do |school| %>
									<li class="list-group-item"><p class="text-left"><%= school.name %> <button><a href="/schools/<%= school.id %>/edit">Edit</a></button> <button><a href="/schools/<%= school.id %>/delete">Delete</a></button></p></li>
									<% end %>			
								</ul>
					</div>
					</div>


    </div><!-- /.container -->


